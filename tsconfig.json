{
	"compilerOptions": {
		"baseUrl": "./src",
		"rootDir": ".",
		"outDir": "./dist",
		"lib": [
			"DOM",
			"DOM.Iterable",
			"ESNext",
		],
		"noImplicitAny": false,
		"allowJs": true,
		"checkJs": true,
		"noEmit": true,
		"moduleResolution": "Node",
		"target": "ES2020",
		"esModuleInterop": true
	},
	"include": [
		"./**/*.js",
		"./**/*.ts",
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}